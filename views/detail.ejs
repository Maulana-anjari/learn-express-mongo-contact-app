<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data contact not found! <br>
                    <a href="/contact" class="card-link fw-normal">&laquo; Back to contact list</a>
                </div>
            <% } else {%>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.number %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <!-- <a href="/contact/delete/<%= contact.id %>" class="btn btn-danger badge" onclick="return confirm('Are you sure?')">Delete</a> -->
                    <form method="POST" action="/contact?_method=DELETE" class="d-inline">
                        <input type="hidden" name="id" value="<%= contact.id %>">
                        <button class="btn btn-danger badge" type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                    <a href="/contact/edit/<%= contact.id %>" class="btn btn-warning badge">Edit</a>
                    <a href="/contact" class="card-link d-block mt-3">&laquo; Back</a>
                </div>
            </div>
            <% } %> 
        </div>
    </div>
</div>