<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>List Contacts</h2>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert"><%= msg %></div>
            <% } %>
            <a href="/" class="btn btn-primary">Add Contact</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number Phone</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Data contact is empty!
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% contacts.forEach((contact, i) => { i++ %>
                        <tr>
                            <th scope="row"><%= i %></th>
                            <td><%= contact.name %></td>
                            <td><%= contact.number %></td>
                            <td><a href="/contact/<%= contact.id %> " class="btn btn-info badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>